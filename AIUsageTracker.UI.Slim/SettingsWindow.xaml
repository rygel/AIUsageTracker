<Window x:Class="AIUsageTracker.UI.Slim.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AI Usage Tracker - Settings" Height="600" Width="600"
        MinWidth="550" MinHeight="500"
        WindowStyle="None" ResizeMode="CanResize"
        Background="{DynamicResource Background}" 
        Foreground="{DynamicResource PrimaryText}"
        ShowInTaskbar="True"
        WindowStartupLocation="CenterScreen"
        KeyDown="Window_KeyDown"
        Icon="Assets/app_icon.ico">

    <Window.Resources>
        <Style x:Key="ComboBoxToggleButton" TargetType="ToggleButton">
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="ClickMode" Value="Press"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border x:Name="templateRoot"
                                Background="{DynamicResource ComboBoxBackground}"
                                BorderBrush="{DynamicResource ControlBorder}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Border Width="30"
                                    HorizontalAlignment="Right"
                                    BorderBrush="Transparent"
                                    BorderThickness="1"
                                    SnapsToDevicePixels="true">
                                <Path Data="M0,0 L10,0 L5,6 z"
                                      Fill="{DynamicResource PrimaryText}"
                                      HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                            </Border>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="true">
                                <Setter TargetName="templateRoot" Property="Background" Value="{DynamicResource ComboBoxItemHover}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="Background" Value="{DynamicResource ComboBoxBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource ControlBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Auto"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="Padding" Value="6,3,5,3"/>
            <Setter Property="ScrollViewer.CanContentScroll" Value="true"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid x:Name="templateRoot" SnapsToDevicePixels="true">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition MinWidth="{DynamicResource {x:Static SystemParameters.VerticalScrollBarWidthKey}}" Width="0"/>
                            </Grid.ColumnDefinitions>
                            <Popup x:Name="PART_Popup"
                                   AllowsTransparency="true"
                                   Grid.ColumnSpan="2"
                                   IsOpen="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                   Margin="1"
                                   PopupAnimation="{DynamicResource {x:Static SystemParameters.ComboBoxPopupAnimationKey}}"
                                   Placement="Bottom">
                                <Border x:Name="dropDownBorder"
                                        Background="{DynamicResource ComboBoxBackground}"
                                        BorderBrush="{DynamicResource ControlBorder}"
                                        BorderThickness="1"
                                        MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        MinWidth="{Binding ActualWidth, ElementName=templateRoot}">
                                    <ScrollViewer x:Name="DropDownScrollViewer">
                                        <Grid x:Name="grid" RenderOptions.ClearTypeHint="Enabled">
                                            <Canvas x:Name="canvas"
                                                    HorizontalAlignment="Left"
                                                    Height="0"
                                                    VerticalAlignment="Top"
                                                    Width="0">
                                                <Rectangle x:Name="opaqueRect"
                                                           Fill="{Binding Background, ElementName=dropDownBorder}"
                                                           Height="{Binding ActualHeight, ElementName=dropDownBorder}"
                                                           Width="{Binding ActualWidth, ElementName=dropDownBorder}"/>
                                            </Canvas>
                                            <ItemsPresenter x:Name="ItemsPresenter"
                                                            KeyboardNavigation.DirectionalNavigation="Contained"
                                                            SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"/>
                                        </Grid>
                                    </ScrollViewer>
                                </Border>
                            </Popup>
                            <ToggleButton x:Name="toggleButton"
                                          BorderBrush="{TemplateBinding BorderBrush}"
                                          BorderThickness="{TemplateBinding BorderThickness}"
                                          Background="{TemplateBinding Background}"
                                          Grid.ColumnSpan="2"
                                          IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          Style="{StaticResource ComboBoxToggleButton}"/>
                            <ContentPresenter x:Name="contentPresenter"
                                              ContentStringFormat="{TemplateBinding SelectionBoxItemStringFormat}"
                                              ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                              Content="{TemplateBinding SelectionBoxItem}"
                                              ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                              IsHitTestVisible="false"
                                              Margin="{TemplateBinding Padding}"
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}"
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                            <TextBox x:Name="PART_EditableTextBox"
                                     HorizontalContentAlignment="{TemplateBinding HorizontalContentAlignment}"
                                     IsReadOnly="{Binding IsReadOnly, RelativeSource={RelativeSource TemplatedParent}}"
                                     Margin="{TemplateBinding Padding}"
                                     Style="{StaticResource {x:Type TextBox}}"
                                     VerticalContentAlignment="{TemplateBinding VerticalContentAlignment}"
                                     Visibility="Hidden"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="HasItems" Value="false">
                                <Setter TargetName="dropDownBorder" Property="Height" Value="95"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                            </Trigger>
                            <Trigger Property="IsGrouping" Value="true">
                                <Setter Property="ScrollViewer.CanContentScroll" Value="false"/>
                            </Trigger>
                            <Trigger Property="IsEditable" Value="true">
                                <Setter Property="IsTabStop" Value="false"/>
                                <Setter TargetName="PART_EditableTextBox" Property="Visibility" Value="Visible"/>
                                <Setter TargetName="contentPresenter" Property="Visibility" Value="Hidden"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="ItemContainerStyle">
                <Setter.Value>
                    <Style TargetType="ComboBoxItem">
                        <Setter Property="Background" Value="{DynamicResource ComboBoxBackground}"/>
                        <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Setter Property="Padding" Value="5,2"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="ComboBoxItem">
                                    <Border x:Name="Border" Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                                        <ContentPresenter />
                                    </Border>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource ComboBoxItemHover}"/>
                                        </Trigger>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource AccentColor}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource AccentForeground}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="DarkDataGridColumnHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="Background" Value="{DynamicResource HeaderBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0,0,1,1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <Style x:Key="DarkDataGridCellStyle" TargetType="DataGridCell">
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="Padding" Value="6,4"/>
            <Setter Property="Background" Value="Transparent"/>
            <Style.Triggers>
                <Trigger Property="IsSelected" Value="True">
                    <Setter Property="Background" Value="{DynamicResource AccentColor}"/>
                    <Setter Property="Foreground" Value="{DynamicResource AccentForeground}"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="DataGrid">
            <Setter Property="Background" Value="{DynamicResource CardBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource CardBorder}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="GridLinesVisibility" Value="Horizontal"/>
            <Setter Property="HorizontalGridLinesBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="VerticalGridLinesBrush" Value="{DynamicResource BorderColor}"/>
            <Setter Property="RowBackground" Value="{DynamicResource CardBackground}"/>
            <Setter Property="AlternatingRowBackground" Value="{DynamicResource ControlBackground}"/>
            <Setter Property="RowHeaderWidth" Value="0"/>
            <Setter Property="ColumnHeaderStyle" Value="{StaticResource DarkDataGridColumnHeaderStyle}"/>
            <Setter Property="CellStyle" Value="{StaticResource DarkDataGridCellStyle}"/>
        </Style>
    </Window.Resources>

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="50" ResizeBorderThickness="5" GlassFrameThickness="0" CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="{DynamicResource HeaderBackground}" Padding="12" Grid.Row="0">
                <DockPanel>
                    <Image Source="Assets/app_icon.ico" Width="16" Height="16" Margin="0,0,8,0" DockPanel.Dock="Left"/>
                    <TextBlock Text="Settings" FontSize="15" FontWeight="Bold" 
                               VerticalAlignment="Center" Foreground="{DynamicResource PrimaryText}"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="PrivacyBtn" Content="&#xE785;" Click="PrivacyBtn_Click" 
                                Background="Transparent" Foreground="{DynamicResource SecondaryText}" 
                                Width="30" Margin="0,0,10,0" ToolTip="Toggle Privacy Mode" 
                                FontFamily="Segoe MDL2 Assets" FontSize="14"
                                WindowChrome.IsHitTestVisibleInChrome="True"/>
                        <Button Content="X" Click="CloseBtn_Click" Background="Transparent" 
                                Foreground="{DynamicResource SecondaryText}" Width="20" 
                                WindowChrome.IsHitTestVisibleInChrome="True"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Tab Control -->
            <TabControl x:Name="MainTabControl" Grid.Row="1" Background="{DynamicResource Background}" 
                        BorderBrush="{DynamicResource BorderColor}" BorderThickness="0,1,0,0">
                <TabControl.Resources>
                    <Style TargetType="TabItem">
                        <Setter Property="Padding" Value="16,8"/>
                        <Setter Property="FontSize" Value="12"/>
                        <Setter Property="Foreground" Value="{DynamicResource SecondaryText}"/>
                        <Setter Property="Background" Value="{DynamicResource TabUnselected}"/>
                        <Setter Property="BorderBrush" Value="{DynamicResource BorderColor}"/>
                        <Setter Property="BorderThickness" Value="1,1,1,0"/>
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="TabItem">
                                    <Grid>
                                        <Border Name="Border" Background="{TemplateBinding Background}" 
                                                BorderBrush="{TemplateBinding BorderBrush}" 
                                                BorderThickness="{TemplateBinding BorderThickness}" 
                                                Padding="{TemplateBinding Padding}" Margin="0,0,0,0">
                                            <ContentPresenter x:Name="ContentSite" ContentSource="Header" 
                                                              HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </Grid>
                                    <ControlTemplate.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter TargetName="Border" Property="Background" Value="{DynamicResource Background}"/>
                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                                        </Trigger>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
                                        </Trigger>
                                    </ControlTemplate.Triggers>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                </TabControl.Resources>

                <!-- Providers Tab -->
                <TabItem Header="Providers">
                    <ScrollViewer Padding="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="ProvidersStack" Margin="20"/>
                    </ScrollViewer>
                </TabItem>

                <!-- Layout Tab -->
                <TabItem Header="Layout">
                    <ScrollViewer Padding="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="LayoutStack" Margin="20">
                            <!-- Layout Settings -->
                            <TextBlock Text="Display Options" FontWeight="Bold" FontSize="14" 
                                       Margin="0,0,0,15" Foreground="{DynamicResource PrimaryText}"/>
                            
                            <CheckBox x:Name="AlwaysOnTopCheck" Content="Always On Top" IsChecked="True"
                                      Margin="0,8" Foreground="{DynamicResource SecondaryText}"
                                      Checked="LayoutSetting_Changed" Unchecked="LayoutSetting_Changed"/>

                            <CheckBox x:Name="AggressiveTopmostCheck"
                                      Content="Aggressive keep-on-top (may steal focus)"
                                      Margin="0,4,0,8"
                                      Foreground="{DynamicResource SecondaryText}"
                                      ToolTip="When enabled, the app can reassert topmost more aggressively after losing activation."
                                      Checked="LayoutSetting_Changed"
                                      Unchecked="LayoutSetting_Changed"/>

                            <CheckBox x:Name="ForceWin32TopmostCheck"
                                      Content="Force Win32 topmost (stronger, no focus)"
                                      Margin="0,0,0,8"
                                      Foreground="{DynamicResource SecondaryText}"
                                      ToolTip="Uses native SetWindowPos topmost reassertion without activating the window."
                                      Checked="LayoutSetting_Changed"
                                      Unchecked="LayoutSetting_Changed"/>

                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Theme" VerticalAlignment="Center"
                                           Foreground="{DynamicResource SecondaryText}" Margin="0,0,10,0"/>
                                <ComboBox x:Name="ThemeCombo" Grid.Column="1"
                                          SelectionChanged="ThemeCombo_SelectionChanged"
                                          Background="{DynamicResource ControlBackground}"
                                          Foreground="{DynamicResource PrimaryText}"
                                           BorderBrush="{DynamicResource ControlBorder}"
                                           Height="24"/>
                            </Grid>

                            <!-- Color Thresholds -->
                            <TextBlock Text="Color Thresholds" FontWeight="Bold" FontSize="14" 
                                       Margin="0,20,0,15" Foreground="{DynamicResource PrimaryText}"/>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Yellow at (%)" VerticalAlignment="Center" 
                                           Foreground="{DynamicResource SecondaryText}" Margin="0,0,10,0"/>
                                <TextBox x:Name="YellowThreshold" Grid.Column="1" Text="60" 
                                         Background="{DynamicResource ControlBackground}"
                                         Foreground="{DynamicResource PrimaryText}" 
                                         BorderBrush="{DynamicResource ControlBorder}"
                                         Padding="8,5"
                                         TextChanged="LayoutSetting_TextChanged"/>
                            </Grid>
                            
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Red at (%)" VerticalAlignment="Center" 
                                           Foreground="{DynamicResource SecondaryText}" Margin="0,0,10,0"/>
                                <TextBox x:Name="RedThreshold" Grid.Column="1" Text="80" 
                                         Background="{DynamicResource ControlBackground}"
                                         Foreground="{DynamicResource PrimaryText}" 
                                         BorderBrush="{DynamicResource ControlBorder}"
                                         Padding="8,5"
                                         TextChanged="LayoutSetting_TextChanged"/>
                            </Grid>

                            <CheckBox x:Name="InvertProgressCheck" Content="Invert Progress Bar" 
                                      Margin="0,15,0,8" Foreground="{DynamicResource SecondaryText}"
                                      Checked="LayoutSetting_Changed" Unchecked="LayoutSetting_Changed"/>
                            
                            <CheckBox x:Name="InvertCalculationsCheck" Content="Invert Calculations" 
                                      Margin="0,8,0,20" Foreground="{DynamicResource SecondaryText}"
                                      ToolTip="Invert the calculation logic for remaining vs used percentages"
                                      Checked="LayoutSetting_Changed" Unchecked="LayoutSetting_Changed"/>

                            <!-- Font Settings -->
                            <TextBlock Text="Font Settings" FontWeight="Bold" FontSize="14" 
                                       Margin="0,0,0,15" Foreground="{DynamicResource PrimaryText}"/>
                            
                            <!-- Font Family -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Font Family" VerticalAlignment="Center" 
                                           Foreground="{DynamicResource SecondaryText}" Margin="0,0,10,0" Width="100"/>
                                <ComboBox x:Name="FontFamilyCombo" Grid.Column="1" 
                                          SelectionChanged="FontFamilyCombo_SelectionChanged"
                                          Background="{DynamicResource ControlBackground}"
                                          Foreground="{DynamicResource PrimaryText}" 
                                          BorderBrush="{DynamicResource ControlBorder}"
                                          Height="24"/>
                            </Grid>
                            
                            <!-- Font Size -->
                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Font Size (px)" VerticalAlignment="Center" 
                                           Foreground="{DynamicResource SecondaryText}" Margin="0,0,10,0" Width="100"/>
                                <TextBox x:Name="FontSizeBox" Grid.Column="1" Text="12" Width="50"
                                         TextChanged="FontSizeBox_TextChanged"
                                         Background="{DynamicResource ControlBackground}"
                                         Foreground="{DynamicResource PrimaryText}" 
                                         BorderBrush="{DynamicResource ControlBorder}"
                                         Padding="8,5"/>
                            </Grid>
                            
                             <!-- Font Style -->
                             <StackPanel Orientation="Horizontal" Margin="100,8,0,15">
                                 <CheckBox x:Name="FontBoldCheck" Content="Bold" 
                                           Checked="FontBoldCheck_CheckedChanged" Unchecked="FontBoldCheck_CheckedChanged"
                                           Margin="0,0,15,0" Foreground="{DynamicResource SecondaryText}"/>
                                 <CheckBox x:Name="FontItalicCheck" Content="Italic" 
                                           Checked="FontItalicCheck_CheckedChanged" Unchecked="FontItalicCheck_CheckedChanged"
                                           Foreground="{DynamicResource SecondaryText}"/>
                             </StackPanel>
                            
                            <!-- Font Preview -->
                            <TextBlock Text="Preview:" FontWeight="Bold" FontSize="12" 
                                       Margin="0,10,0,10" Foreground="{DynamicResource TertiaryText}"/>
                            
                            <Border Background="{DynamicResource CardBackground}" 
                                    BorderBrush="{DynamicResource CardBorder}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="12" 
                                    Margin="0,0,0,10">
                                <TextBlock x:Name="FontPreviewText" 
                                           Text="The quick brown fox jumps over the lazy dog."
                                           Foreground="{DynamicResource PrimaryText}"/>
                            </Border>
                            
                             <Button x:Name="ResetFontBtn" Content="Reset to Default" Click="ResetFontBtn_Click"
                                     Padding="10,5" Background="{DynamicResource ButtonBackground}"
                                     Foreground="{DynamicResource PrimaryText}"
                                     HorizontalAlignment="Left" Margin="0,5,0,0"/>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Notifications Tab -->
                <TabItem Header="Notifications">
                    <ScrollViewer Padding="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel Margin="20">
                            <TextBlock Text="Windows Notifications" FontWeight="Bold" FontSize="14"
                                       Margin="0,0,0,15" Foreground="{DynamicResource PrimaryText}"/>

                            <CheckBox x:Name="EnableWindowsNotificationsCheck"
                                      Content="Enable Windows notifications"
                                      Margin="0,8"
                                      Foreground="{DynamicResource SecondaryText}"
                                      Checked="EnableWindowsNotificationsCheck_Changed"
                                      Unchecked="EnableWindowsNotificationsCheck_Changed"/>

                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <TextBlock Text="Notify at (%)" VerticalAlignment="Center"
                                           Foreground="{DynamicResource SecondaryText}" Margin="0,0,10,0"/>
                                <TextBox x:Name="NotificationThresholdBox" Grid.Column="1" Text="90"
                                         Background="{DynamicResource ControlBackground}"
                                         Foreground="{DynamicResource PrimaryText}"
                                         BorderBrush="{DynamicResource ControlBorder}"
                                         Padding="8,5"
                                         TextChanged="LayoutSetting_TextChanged"/>
                            </Grid>

                            <TextBlock Text="Event Types" FontWeight="Bold" FontSize="14"
                                       Margin="0,20,0,15" Foreground="{DynamicResource PrimaryText}"/>

                            <CheckBox x:Name="NotifyUsageThresholdCheck"
                                      Content="Usage threshold reached"
                                      Margin="0,6"
                                      Foreground="{DynamicResource SecondaryText}"
                                      Checked="LayoutSetting_Changed" Unchecked="LayoutSetting_Changed"/>
                            <CheckBox x:Name="NotifyQuotaExceededCheck"
                                      Content="Quota exceeded or reset detected"
                                      Margin="0,6"
                                      Foreground="{DynamicResource SecondaryText}"
                                      Checked="LayoutSetting_Changed" Unchecked="LayoutSetting_Changed"/>
                            <CheckBox x:Name="NotifyProviderErrorsCheck"
                                      Content="Provider unavailable or authentication errors (coming soon)"
                                      Margin="0,6"
                                      Foreground="{DynamicResource SecondaryText}"
                                      IsEnabled="False"
                                      ToolTip="Planned for a future update."/>

                            <TextBlock Text="Quiet Hours" FontWeight="Bold" FontSize="14"
                                       Margin="0,20,0,15" Foreground="{DynamicResource PrimaryText}"/>

                            <CheckBox x:Name="EnableQuietHoursCheck"
                                      Content="Enable quiet hours"
                                      Margin="0,6"
                                      Foreground="{DynamicResource SecondaryText}"
                                      Checked="EnableWindowsNotificationsCheck_Changed"
                                      Unchecked="EnableWindowsNotificationsCheck_Changed"/>

                            <Grid Margin="0,8">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="90"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>

                                <TextBlock Text="Start" VerticalAlignment="Center"
                                           Foreground="{DynamicResource SecondaryText}" Margin="0,0,10,0"/>
                                <TextBox x:Name="QuietHoursStartBox" Grid.Column="1" Text="22:00"
                                         Background="{DynamicResource ControlBackground}"
                                         Foreground="{DynamicResource PrimaryText}"
                                         BorderBrush="{DynamicResource ControlBorder}"
                                         Padding="8,5" Margin="0,0,10,0"
                                         TextChanged="LayoutSetting_TextChanged"/>

                                <TextBlock Text="End" Grid.Column="2" VerticalAlignment="Center"
                                           Foreground="{DynamicResource SecondaryText}" Margin="0,0,10,0"/>
                                <TextBox x:Name="QuietHoursEndBox" Grid.Column="3" Text="07:00"
                                         Background="{DynamicResource ControlBackground}"
                                         Foreground="{DynamicResource PrimaryText}"
                                         BorderBrush="{DynamicResource ControlBorder}"
                                         Padding="8,5"
                                         TextChanged="LayoutSetting_TextChanged"/>
                            </Grid>

                            <TextBlock Text="Note: provider-level 'Notify' checkboxes in the Providers tab still apply."
                                       FontSize="11"
                                       Margin="0,14,0,0"
                                       Foreground="{DynamicResource TertiaryText}"
                                       TextWrapping="Wrap"/>

                            <StackPanel Orientation="Horizontal" Margin="0,14,0,0">
                                <Button Content="Send Test Notification"
                                        Click="SendTestNotificationBtn_Click"
                                        Padding="10,5"
                                        Background="{DynamicResource ButtonBackground}"
                                        Foreground="{DynamicResource PrimaryText}"
                                        Margin="0,0,10,0"/>
                                <TextBlock x:Name="NotificationTestStatusText"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource TertiaryText}"
                                           FontSize="11"/>
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- History Tab -->
                <TabItem Header="History">
                    <ScrollViewer Padding="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="HistoryStack" Margin="20">
                            <!-- History Header -->
                            <TextBlock Text="Usage History" FontWeight="Bold" FontSize="14" 
                                       Margin="0,0,0,15" Foreground="{DynamicResource PrimaryText}"/>
                            
                            <TextBlock Text="Raw historical data from the agent (last 24 hours)" 
                                       FontSize="11" Foreground="{DynamicResource SecondaryText}" 
                                       Margin="0,0,0,15"/>
                            
                            <!-- Refresh History Button -->
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Button Content="Refresh" Click="RefreshHistoryBtn_Click" 
                                        Padding="10,5" Background="{DynamicResource ButtonBackground}"
                                        Foreground="{DynamicResource PrimaryText}"
                                        Margin="0,0,10,0"/>
                                <Button Content="Clear History" Click="ClearHistoryBtn_Click" 
                                        Padding="10,5" Background="{DynamicResource ButtonBackground}"
                                        Foreground="{DynamicResource PrimaryText}"/>
                            </StackPanel>
                            
                            <!-- History Data Grid -->
                            <Border Background="{DynamicResource CardBackground}" 
                                    BorderBrush="{DynamicResource CardBorder}" 
                                    BorderThickness="1" 
                                    CornerRadius="4">
                                <DataGrid x:Name="HistoryDataGrid" 
                                          AutoGenerateColumns="False"
                                          HeadersVisibility="Column"
                                          GridLinesVisibility="Horizontal"
                                          Background="Transparent"
                                          RowBackground="{DynamicResource CardBackground}"
                                          AlternatingRowBackground="{DynamicResource ControlBackground}"
                                          BorderThickness="0"
                                          IsReadOnly="True"
                                          CanUserAddRows="False"
                                          CanUserDeleteRows="False"
                                          CanUserReorderColumns="True"
                                          CanUserResizeColumns="True"
                                          CanUserSortColumns="True"
                                          Height="400">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="Provider" Binding="{Binding ProviderName}" Width="120"/>
                                        <DataGridTextColumn Header="Usage %" Binding="{Binding UsagePercentage, StringFormat=F1}" Width="70"/>
                                        <DataGridTextColumn Header="Cost Used" Binding="{Binding Used, StringFormat=F2}" Width="80"/>
                                        <DataGridTextColumn Header="Cost Limit" Binding="{Binding Limit, StringFormat=F2}" Width="80"/>
                                        <DataGridTextColumn Header="Type" Binding="{Binding PlanType}" Width="80"/>
                                        <DataGridTextColumn Header="Status" Binding="{Binding Description}" Width="150"/>
                                        <DataGridTextColumn Header="Fetched At" Binding="{Binding FetchedAt, StringFormat=yyyy-MM-dd HH:mm:ss}" Width="140"/>
                                    </DataGrid.Columns>
                                </DataGrid>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>

                <!-- Monitor Tab -->
                <TabItem Header="Monitor">
                    <ScrollViewer Padding="0" VerticalScrollBarVisibility="Auto">
                        <StackPanel x:Name="AgentStack" Margin="20">
                            <!-- Monitor Status -->
                            <TextBlock Text="Monitor Status" FontWeight="Bold" FontSize="14" 
                                       Margin="0,0,0,15" Foreground="{DynamicResource PrimaryText}"/>
                            
                            <Border Background="{DynamicResource CardBackground}" 
                                    BorderBrush="{DynamicResource CardBorder}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Padding="15" 
                                    Margin="0,0,0,15">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                        <RowDefinition Height="Auto"/>
                                    </Grid.RowDefinitions>
                                    
                                    <TextBlock Text="Status:" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource SecondaryText}" 
                                               Margin="0,0,10,8" Grid.Row="0" Grid.Column="0"/>
                                    <TextBlock x:Name="AgentStatusText" Text="Checking..." 
                                               Foreground="{DynamicResource PrimaryText}" 
                                               Grid.Row="0" Grid.Column="1"/>
                                    
                                    <TextBlock Text="Port:" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource SecondaryText}" 
                                               Margin="0,0,10,8" Grid.Row="1" Grid.Column="0"/>
                                    <TextBlock x:Name="AgentPortText" Text="5000" 
                                               Foreground="{DynamicResource PrimaryText}" 
                                               Grid.Row="1" Grid.Column="1"/>
                                    
                                    <TextBlock Text="Auto-Start:" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource SecondaryText}" 
                                               Margin="0,0,10,0" Grid.Row="2" Grid.Column="0"/>
                                    <CheckBox x:Name="AutoStartAgentCheck" Content="Start Monitor automatically" 
                                              IsChecked="True"
                                              Foreground="{DynamicResource SecondaryText}" 
                                              Grid.Row="2" Grid.Column="1"/>
                                </Grid>
                            </Border>

                            <!-- Monitor Actions -->
                            <TextBlock Text="Actions" FontWeight="Bold" FontSize="14" 
                                       Margin="0,20,0,15" Foreground="{DynamicResource PrimaryText}"/>
                            
                            <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                                <Button Content="Restart Monitor" Click="RestartAgentBtn_Click" 
                                        Padding="12,6" Background="{DynamicResource ButtonBackground}"
                                        Foreground="{DynamicResource PrimaryText}"
                                        Margin="0,0,10,0"/>
                                <Button Content="Check Health" Click="CheckHealthBtn_Click" 
                                        Padding="12,6" Background="{DynamicResource ButtonBackground}"
                                        Foreground="{DynamicResource PrimaryText}"
                                        Margin="0,0,10,0"/>
                                <Button Content="Export Diagnostics" Click="ExportDiagnosticsBtn_Click"
                                        Padding="12,6" Background="{DynamicResource ButtonBackground}"
                                        Foreground="{DynamicResource PrimaryText}"/>
                            </StackPanel>

                            <!-- Monitor Logs -->
                            <TextBlock Text="Logs" FontWeight="Bold" FontSize="14" 
                                       Margin="0,20,0,15" Foreground="{DynamicResource PrimaryText}"/>
                            
                            <Border Background="{DynamicResource ControlBackground}" 
                                    BorderBrush="{DynamicResource ControlBorder}" 
                                    BorderThickness="1" 
                                    CornerRadius="4" 
                                    Height="150">
                                <TextBox x:Name="AgentLogsText" 
                                         IsReadOnly="True"
                                         Background="Transparent"
                                         Foreground="{DynamicResource SecondaryText}"
                                         FontFamily="Consolas"
                                         FontSize="10"
                                         Padding="10"
                                         TextWrapping="Wrap"
                                         VerticalScrollBarVisibility="Auto"/>
                            </Border>
                        </StackPanel>
                    </ScrollViewer>
                </TabItem>
            </TabControl>

            <!-- Footer -->
            <Border Grid.Row="2" Background="{DynamicResource FooterBackground}" Padding="12,8">
                <DockPanel>
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <Button x:Name="ScanBtn" Content="Scan for Keys" Click="ScanBtn_Click" 
                                ToolTip="Search common locations for API keys" 
                                Padding="10,5" Background="{DynamicResource ButtonBackground}"
                                Foreground="{DynamicResource PrimaryText}"
                                Margin="0,0,10,0"/>
                        <Button x:Name="RefreshBtn" Content="Refresh Data" Click="RefreshBtn_Click" 
                                ToolTip="Trigger data refresh from providers"
                                Padding="10,5" Background="{DynamicResource ButtonBackground}"
                                Foreground="{DynamicResource PrimaryText}"/>
                    </StackPanel>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="Close" Click="CancelBtn_Click" Padding="10,5"
                                Background="{DynamicResource ButtonBackground}"
                                Foreground="{DynamicResource PrimaryText}"/>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</Window>

