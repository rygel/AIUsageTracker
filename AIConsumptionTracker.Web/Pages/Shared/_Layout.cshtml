<!DOCTYPE html>
<html lang="en" data-theme="dark">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AI Consumption Tracker</title>
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/themes.css" />
    <script src="https://unpkg.com/htmx.org@1.9.12" crossorigin="anonymous"></script>
</head>
<body>
    <div class="app-container">
        <!-- Sidebar -->
        <aside class="sidebar" id="sidebar">
            <div class="sidebar-header">
                <span class="sidebar-brand">AI Tracker</span>
            </div>
            
            <nav class="sidebar-nav">
                <ul>
                    <li class="nav-item">
                        <a href="/" class="nav-link @(Context.Request.Path == "/" ? "active" : "")">
                            <span class="nav-text">Dashboard</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/Providers" class="nav-link @(Context.Request.Path.Value?.Contains("/Providers") == true ? "active" : "")">
                            <span class="nav-text">Providers</span>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a href="/History" class="nav-link @(Context.Request.Path.Value?.Contains("/History") == true ? "active" : "")">
                            <span class="nav-text">History</span>
                        </a>
                    </li>
                </ul>
            </nav>
            
            <div class="sidebar-footer">
                <div class="theme-section">
                    <select id="theme-select" class="theme-select">
                        <option value="dark">Dark</option>
                        <option value="light">Light</option>
                        <option value="corporate">Corporate</option>
                        <option value="midnight">Midnight</option>
                    </select>
                </div>
                <div class="sidebar-footer-text">&copy; @DateTime.Now.Year</div>
            </div>
        </aside>

        <!-- Main Content -->
        <div class="main-content">
            <!-- Mobile Header -->
            <header class="mobile-header">
                <button class="menu-toggle" id="menu-toggle" aria-label="Menu">
                    <span></span>
                    <span></span>
                    <span></span>
                </button>
                <span class="mobile-title">AI Tracker</span>
            </header>

            <!-- Page Content -->
            <main class="content-wrapper">
                @RenderBody()
            </main>
        </div>
    </div>

    <!-- Overlay for mobile -->
    <div class="sidebar-overlay" id="sidebar-overlay"></div>

    <script src="~/js/theme.js"></script>
    <script src="~/js/sidebar.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
