<Window x:Class="AIConsumptionTracker.UI.ProgressWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Updating" Width="400" Height="120"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#1E1E1E" Foreground="White"
        WindowStartupLocation="CenterOwner">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" GlassFrameThickness="0" CornerRadius="8" />
    </WindowChrome.WindowChrome>

    <Border BorderBrush="#333333" BorderThickness="1" CornerRadius="8" Background="#1E1E1E" Padding="20">
        <StackPanel>
            <TextBlock x:Name="MessageText" Text="Downloading..." FontSize="14" Margin="0,0,0,15"/>
            <ProgressBar x:Name="ProgressBar" Height="20" Minimum="0" Maximum="100" Background="#2D2D30" Foreground="#007ACC"/>
        </StackPanel>
    </Border>
</Window>
