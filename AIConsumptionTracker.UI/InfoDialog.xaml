<Window x:Class="AIConsumptionTracker.UI.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About AI Consumption Tracker" Height="300" Width="400"
        MinWidth="350" MinHeight="250"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#1E1E1E"
        Foreground="White"
        ShowInTaskbar="False"
        Topmost="True"
        AutomationProperties.Name="About AI Consumption Tracker"
        Icon="Assets/app_icon.png"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="#252526" Padding="12">
                <DockPanel>
                    <Image Source="Assets/app_icon.png" Width="24" Height="24" Margin="0,0,8,0" DockPanel.Dock="Left"/>
                    <TextBlock Text="AI Consumption Tracker" FontSize="15" FontWeight="Bold" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                    <TextBlock x:Name="VersionText" Text="v..." FontSize="11" Foreground="#888888" VerticalAlignment="Center" Margin="8,2,0,0" DockPanel.Dock="Left"/>
                    <Button Content="X" HorizontalAlignment="Right" Click="CloseBtn_Click" Background="Transparent" Foreground="#AAAAAA" Width="20" WindowChrome.IsHitTestVisibleInChrome="True"/>
                </DockPanel>
            </Border>

            <!-- Content -->
            <ScrollViewer Grid.Row="1" Padding="20" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <TextBlock Text="AI Consumption Tracker" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                    <TextBlock Text="A desktop application for tracking AI service usage and costs." FontSize="12" Foreground="#AAAAAA" TextWrapping="Wrap" Margin="0,0,0,30" HorizontalAlignment="Center" Width="300"/>

                    <TextBlock Text="Application Info" FontSize="14" FontWeight="SemiBold" Foreground="#CCCCCC" Margin="0,0,0,10"/>
                    <StackPanel Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Version:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="AppVersionText" Text="v..." Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text=".NET Runtime:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="DotNetVersionText" Text="..." Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="OS:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="OsVersionText" Text="..." Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Architecture:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="ArchitectureText" Text="..." Foreground="White"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="System Info" FontSize="14" FontWeight="SemiBold" Foreground="#CCCCCC" Margin="0,0,0,10"/>
                    <StackPanel Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Machine Name:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="MachineNameText" Text="..." Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="User:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="UserNameText" Text="..." Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Current Directory:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="CurrentDirText" Text="..." Foreground="White" TextWrapping="Wrap" MaxWidth="200"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="Credits" FontSize="14" FontWeight="SemiBold" Foreground="#CCCCCC" Margin="0,0,0,10"/>
                    <TextBlock Text="Â© 2024 AI Consumption Tracker" FontSize="11" Foreground="#888888" HorizontalAlignment="Center" Margin="0,0,0,5"/>
                    <TextBlock Text="Built with .NET 8.0 WPF" FontSize="11" Foreground="#888888" HorizontalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#252526" Padding="12,8">
                <DockPanel>
                    <Button x:Name="CloseBtn" Content="Close" HorizontalAlignment="Right" Click="CloseBtn_Click" Width="80"/>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</Window>