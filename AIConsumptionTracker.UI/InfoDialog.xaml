<Window x:Class="AIConsumptionTracker.UI.InfoDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="About AI Consumption Tracker" Width="450"
        SizeToContent="Height"
        MinWidth="350"
        WindowStyle="None" ResizeMode="NoResize"
        Background="#1E1E1E"
        Foreground="White"
        ShowInTaskbar="False"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        AutomationProperties.Name="About AI Consumption Tracker"
        Icon="Assets/app_icon.png"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border x:Name="HeaderBorder" Background="#252526" Padding="12" MouseDown="Header_MouseDown">
                <DockPanel>
                    <TextBlock Text="Info" FontSize="15" FontWeight="Bold" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="PrivacyBtn" Content="ðŸ”’" Click="PrivacyBtn_Click" Background="Transparent" Foreground="#AAAAAA" Width="30" Margin="0,0,10,0" ToolTip="Toggle Privacy Mode" WindowChrome.IsHitTestVisibleInChrome="True"/>
                        <Button Content="X" Click="CloseBtn_Click" Background="Transparent" Foreground="#AAAAAA" Width="20" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <StackPanel Grid.Row="1" Margin="20">
                <TextBlock Text="AI Consumption Tracker" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>
                <TextBlock x:Name="InternalVersionText" Text="v..." FontSize="12" Foreground="#888888" HorizontalAlignment="Center" Margin="0,0,0,20"/>
                <TextBlock Text="A desktop application for tracking AI service usage and costs." FontSize="12" Foreground="#AAAAAA" TextWrapping="Wrap" Margin="0,0,0,30" HorizontalAlignment="Center" Width="300"/>

                    <TextBlock Text="Application Info" FontSize="14" FontWeight="SemiBold" Foreground="#CCCCCC" Margin="0,0,0,10"/>
                    <StackPanel Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text=".NET Runtime:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="DotNetVersionText" Text="..." Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="OS:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="OsVersionText" Text="..." Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Architecture:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="ArchitectureText" Text="..." Foreground="White"/>
                        </StackPanel>
                    </StackPanel>

                    <TextBlock Text="System Info" FontSize="14" FontWeight="SemiBold" Foreground="#CCCCCC" Margin="0,0,0,10"/>
                    <StackPanel Margin="0,0,0,20">
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Machine Name:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="MachineNameText" Text="..." Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="User:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="UserNameText" Text="..." Foreground="White"/>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                            <TextBlock Text="Configuration:" Width="100" Foreground="#888888"/>
                            <TextBlock x:Name="ConfigPathText" VerticalAlignment="Center" MaxWidth="280">
                                <Hyperlink Click="ConfigPath_Click" Foreground="#007ACC" TextDecorations="None">
                                    <TextBlock x:Name="ConfigLinkText" Text="auth.json" TextWrapping="Wrap"/>
                                </Hyperlink>
                            </TextBlock>
                        </StackPanel>
                    </StackPanel>

            </StackPanel>

            <!-- Footer -->
            <Border x:Name="FooterBorder" Grid.Row="2" Background="#252526" Padding="12,8">
                <DockPanel>
                    <Button x:Name="CloseBtn" Content="Close" HorizontalAlignment="Right" Click="CloseBtn_Click" Width="80"/>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</Window>