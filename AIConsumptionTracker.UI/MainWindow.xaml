<Window x:Class="AIConsumptionTracker.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AI Consumption Tracker" Height="500" Width="420"
        MinWidth="350" MinHeight="400"
        WindowStyle="None" ResizeMode="CanResize"
        WindowStartupLocation="Manual"
        Background="{DynamicResource Background}"
        Foreground="{DynamicResource PrimaryText}"
        ShowInTaskbar="False"
        Topmost="True"
        AutomationProperties.Name="AI Consumption Tracker"
        Icon="Assets/app_icon.png"
        KeyDown="OnKeyDown">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="50" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0" 
                      CornerRadius="0" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="{DynamicResource ButtonBackground}"/>
            <Setter Property="Foreground" Value="{DynamicResource PrimaryText}"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="0">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="{DynamicResource BorderColor}" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border x:Name="HeaderBorder" Background="{DynamicResource HeaderBackground}" Padding="12" Grid.Row="0">
                <DockPanel>
                    <Image Source="Assets/app_icon.png" Width="18" Height="18" Margin="0,0,8,0" DockPanel.Dock="Left"/>
                    <TextBlock Text="AI Consumption Tracker" FontSize="15" FontWeight="Bold" VerticalAlignment="Center" Foreground="{DynamicResource PrimaryText}" DockPanel.Dock="Left"/>
                    <TextBlock x:Name="VersionText" Text="v..." FontSize="11" Foreground="{DynamicResource TertiaryText}" VerticalAlignment="Center" Margin="8,2,0,0" DockPanel.Dock="Left"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button x:Name="PrivacyBtn" Content="ðŸ”’" Click="PrivacyBtn_Click" Background="Transparent" Foreground="{DynamicResource SecondaryText}" Width="30" Margin="0,0,10,0" ToolTip="Toggle Privacy Mode (Ctrl+P)" WindowChrome.IsHitTestVisibleInChrome="True"/>
                        <Button Content="X" Click="CloseBtn_Click" Background="Transparent" Foreground="{DynamicResource SecondaryText}" Width="20" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Update Notification -->
            <Border x:Name="UpdateNotificationBanner" Grid.Row="1" Background="{DynamicResource UpdateBannerBackground}" Padding="8,4" Visibility="Collapsed">
                <DockPanel>
                    <TextBlock x:Name="UpdateText" Text="New version available!" Foreground="White" FontSize="12" VerticalAlignment="Center"/>
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <Button Content="View Changelog" HorizontalAlignment="Right" Click="ViewChangelogBtn_Click" Background="{DynamicResource UpdateButtonBackground}" Foreground="White" FontSize="11" Padding="8,2" Margin="10,0,5,0" Cursor="Hand" WindowChrome.IsHitTestVisibleInChrome="True"/>
                        <Button Content="Download" HorizontalAlignment="Right" Click="UpdateBtn_Click" Background="{DynamicResource UpdateButtonBackground}" Foreground="White" FontSize="11" Padding="8,2" Margin="5,0,0,0" Cursor="Hand" WindowChrome.IsHitTestVisibleInChrome="True"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Agent Error Banner -->
            <Border x:Name="ErrorBanner" Grid.Row="1" Background="#FFE53935" Padding="12,8" Visibility="Collapsed">
                <DockPanel>
                    <TextBlock Text="âš " FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0" Foreground="White"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="Agent Error" FontWeight="Bold" Foreground="White" FontSize="12"/>
                        <TextBlock x:Name="ErrorText" Text="Could not connect to background agent." Foreground="White" FontSize="11" TextWrapping="Wrap"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- List -->
            <ScrollViewer Grid.Row="2" Padding="10" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="ProvidersList">
                    <TextBlock Text="Loading..." Foreground="{DynamicResource TertiaryText}" HorizontalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border x:Name="FooterBorder" Grid.Row="3" Background="{DynamicResource FooterBackground}" Padding="12,8">
                <DockPanel>
                    <CheckBox x:Name="ShowAllToggle" 
                              Content="Show All" 
                              IsChecked="True"
                              Foreground="{DynamicResource SecondaryText}" 
                              VerticalAlignment="Center"
                              Checked="RefreshData_NoArgs"
                              Unchecked="RefreshData_NoArgs"/>
                      
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <CheckBox x:Name="AlwaysOnTopCheck" 
                                  Content="Top" 
                                  IsChecked="True"
                                  Foreground="{DynamicResource SecondaryText}" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"
                                  Checked="AlwaysOnTop_Checked"
                                  Unchecked="AlwaysOnTop_Checked"/>
                        
                        <CheckBox x:Name="StayOpenCheck" 
                                  Content="Pin" 
                                  IsChecked="False"
                                  Foreground="{DynamicResource SecondaryText}" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"
                                  Checked="StayOpen_Checked"
                                  Unchecked="StayOpen_Checked"/>
                        
                        <CheckBox x:Name="CompactCheck" 
                                  Content="Compact" 
                                  IsChecked="True"
                                  Foreground="{DynamicResource SecondaryText}" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"
                                  Checked="Compact_Checked"
                                  Unchecked="Compact_Checked"/>
                        
                        <Button x:Name="RefreshBtn" Click="RefreshBtn_Click" Margin="0,0,10,0" ToolTip="Refresh Data (Ctrl+R)" Width="32" Height="30">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                        </Button>
                        <Button x:Name="SettingsBtn" Click="SettingsBtn_Click" ToolTip="Provider Settings" Width="32" Height="30">
                            <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</Window>

