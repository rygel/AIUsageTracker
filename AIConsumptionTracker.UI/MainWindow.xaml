<Window x:Class="AIConsumptionTracker.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="AI Consumption Dashboard" Height="500" Width="420"
        MinWidth="350" MinHeight="400"
        WindowStyle="None" ResizeMode="CanResize"
        Background="#1E1E1E"
        Foreground="White"
        ShowInTaskbar="False"
        Topmost="True"
        Icon="Assets/app_icon.png">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="50" 
                      ResizeBorderThickness="5" 
                      GlassFrameThickness="0" 
                      CornerRadius="8" />
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Background" Value="#333333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="5">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Background="#252526" Padding="12">
                <DockPanel>
                    <Image Source="Assets/app_icon.png" Width="18" Height="18" Margin="0,0,8,0" DockPanel.Dock="Left"/>
                    <TextBlock Text="AI Consumption Tracker" FontSize="15" FontWeight="Bold" VerticalAlignment="Center" DockPanel.Dock="Left"/>
                    <TextBlock x:Name="VersionText" Text="v..." FontSize="11" Foreground="#888888" VerticalAlignment="Center" Margin="8,2,0,0" DockPanel.Dock="Left"/>
                    <Button Content="X" HorizontalAlignment="Right" Click="CloseBtn_Click" Background="Transparent" Foreground="#AAAAAA" Width="20" WindowChrome.IsHitTestVisibleInChrome="True"/>
                </DockPanel>
            </Border>

            <!-- List -->
            <ScrollViewer Grid.Row="1" Padding="10">
                <StackPanel x:Name="ProvidersList">
                    <TextBlock Text="Loading..." Foreground="#888888" HorizontalAlignment="Center"/>
                </StackPanel>
            </ScrollViewer>

            <!-- Footer -->
            <Border Grid.Row="2" Background="#252526" Padding="12,8">
                <DockPanel>
                    <CheckBox x:Name="ShowAllToggle" 
                              Content="Show All" 
                              IsChecked="True"
                              Foreground="#AAAAAA" 
                              VerticalAlignment="Center"
                              Checked="RefreshData_NoArgs"
                              Unchecked="RefreshData_NoArgs"/>
                    
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                        <CheckBox x:Name="AlwaysOnTopCheck" 
                                  Content="Top" 
                                  IsChecked="True"
                                  Foreground="#AAAAAA" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"
                                  Checked="AlwaysOnTop_Checked"
                                  Unchecked="AlwaysOnTop_Checked"/>

                        <CheckBox x:Name="StayOpenCheck" 
                                  Content="Pin" 
                                  IsChecked="False"
                                  Foreground="#AAAAAA" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"
                                  Checked="StayOpen_Checked"
                                  Unchecked="StayOpen_Checked"/>

                        <CheckBox x:Name="CompactCheck" 
                                  Content="Compact" 
                                  IsChecked="True"
                                  Foreground="#AAAAAA" 
                                  VerticalAlignment="Center"
                                  Margin="0,0,12,0"
                                  Checked="Compact_Checked"
                                  Unchecked="Compact_Checked"/>

                        <Button Click="RefreshBtn_Click" Margin="0,0,10,0" ToolTip="Refresh Data" Width="32" Height="30">
                            <TextBlock Text="&#xE72C;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                        </Button>
                        <Button Background="#444444" Click="SettingsBtn_Click" ToolTip="Provider Settings" Width="32" Height="30">
                            <TextBlock Text="&#xE713;" FontFamily="Segoe MDL2 Assets" FontSize="14" VerticalAlignment="Center"/>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Border>
        </Grid>
    </Border>
</Window>

