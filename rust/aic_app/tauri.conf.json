{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "",
    "beforeDevCommand": "",
    "frontendDist": "src"
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "copyright": "2024 AI Token Tracker",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "longDescription": "Monitor your AI API token usage across multiple providers",
    "shortDescription": "AI Token Tracker",
    "targets": "all",
    "createUpdaterArtifacts": true,
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": ""
    },
    "macOS": {
      "entitlements": null,
      "exceptionDomain": "",
      "frameworks": [],
      "providerShortName": null,
      "signingIdentity": null
    },
    "linux": {
      "deb": {
        "depends": []
      }
    }
  },
  "identifier": "com.ai.tokentracker.application",
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "url": "index.html",
        "fullscreen": false,
        "height": 500,
        "minHeight": 400,
        "resizable": true,
        "title": "AI Token Tracker",
        "width": 480,
        "minWidth": 350,
        "visible": true,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false
      },
      {
        "label": "settings",
        "url": "settings.html",
        "fullscreen": false,
        "height": 600,
        "minHeight": 500,
        "resizable": true,
        "title": "Settings - AI Token Tracker",
        "width": 700,
        "minWidth": 550,
        "visible": false,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false,
        "parent": "main"
      },
      {
        "label": "agent",
        "url": "index.html",
        "fullscreen": false,
        "height": 700,
        "minHeight": 600,
        "resizable": true,
        "title": "Agent Management - AI Token Tracker",
        "width": 650,
        "minWidth": 500,
        "visible": false,
        "center": true,
        "decorations": false,
        "transparent": true,
        "alwaysOnTop": false
      }
    ],
    "trayIcon": {
      "iconAsTemplate": false,
      "menuOnLeftClick": false,
      "tooltip": "AI Token Tracker",
      "iconPath": "icons/icon.ico"
    },
    "withGlobalTauri": true
  },
  "plugins": {
    "shell": {
      "open": true
    },
    "notification": {
      "active": true
    },
    "updater": {
      "active": true,
      "endpoints": ["https://api.github.com/repos/rygel/AIConsumptionTracker/releases"],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IENFRUYxQTI0NURGNkRDOEYKUldTUDNQWmRKQnJ2em5KNXZpM1E1WHMyNThrYnptU2c3eGxuYnhHa3lhWk1pN3A3MmF5TUZ3T1EK"
    },
    "permissions": {
      "active": true,
      "resources": ["capabilities/main.json"]
    }
  }
}